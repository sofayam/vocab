<form id="vocab">
    <input type="text" id="_id" value={{word._id}}>
    <table>
        <tr>
            <td>
                Word:
            </td>
            <td>
                <input type="text" id="word" value="{{word.word}}">
            </td>
        </tr>
        <tr>
            <td>
                Meaning:
            </td>
            <td>
                <input type="text" id="meaning" value="{{word.meaning}}">
            </td>
        </tr>
        <tr>
            <td>
                Type:
            </td>
            <td>
                <input type="text" id="type" value="{{word.type}}">
            </td>
        </tr>
        <tr>
            <td>
                Example:
            </td>
            <td>
                <textarea rows="2" cols="30" id="example">
                    {{word.example}}
                </textarea>
            </td>
        </tr>
        <tr>
            <td>
                Visits:
            </td>
            <td>
                <span id="visits">{{word.sightings.length}}</span>
            </td>
        </tr>
        <tr>
            <td>
                Created:
            </td>
            <td>
                <span id="created">{{nds}}</span>
            </td>
        </tr>
    </table>
</form>
    
